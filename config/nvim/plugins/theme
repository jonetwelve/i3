if has("python3")

function LoadRandomTheme()
py3 << EOF
import random
import vim

themes = {'onedark':"Plug 'joshdick/onedark.vim'",
        'space-vim-dark':"Plug 'liuchengxu/space-vim-dark'",
        'neodark':"Plug 'KeitaNakamura/neodark.vim'",
        'monokai':"Plug 'crusoexia/vim-monokai'",
        'apprentice':"Plug 'romainl/Apprentice'",
        'deep-space':"Plug 'tyrannicaltoucan/vim-deep-space'"}
themes_keys = list(themes.keys())
theme = random.choice(themes_keys)
# set theme
_cmd = 'let g:load_rand_theme = "{}"'.format(theme)
vim.command(_cmd)
# load theme
_cmd = themes[theme]
vim.command(_cmd)
EOF
endfunction




function SetRandomTheme()
py3 << EOF
import vim

theme = vim.eval("g:load_rand_theme")
_cmd = 'colorscheme {}'.format(theme)
vim.command(_cmd)
EOF
endfunction

endif
